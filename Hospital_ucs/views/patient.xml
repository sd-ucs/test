<?xml version ="1.0" encoding="utf-8" ?>
<odoo>
    <record id="patient_tree_view" model="ir.ui.view">
        <field name="name">patient.tree.view.inherit</field>
        <field name="model">patient</field>
        <field name="arch" type="xml">
            <tree string="Test Name">
<!--                <header>-->
<!--                    <button name ="button_done" string ="In Consultation" type ="object"/>-->
<!--                </header>-->
                <field name="name"/>
                <field name="case_no"/>
                <field name="date"/>
                <field name="is_active"/>
                <field name="patient_id"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="patient_form_view"  model="ir.ui.view">
        <field name="name">patient.form.view</field>
        <field name="model">patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="case_no"/>
                        <field name="date"/>
                        <field name="is_active"/>
                        <field name="patient_id"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="patient_action" model="ir.actions.act_window">
        <field name="name">patient</field>
        <field name="res_model">patient</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">

            <p class="o_view_nocontent_smiling_face">
                Create your first patient!
            </p>
        </field>
    </record>

    <menuitem id="hospital_root"
              name="Hospital"
              sequence="2">
    </menuitem>
        <menuitem id = "hospital_patient_root"
                  name = "Patients"
                  parent = "hospital_root"
                  action = "ir_action_test"
                  sequence="10"/>


        <menuitem id = "hospital_patient"
                       name = "patients"
                       parent = "hospital_patient_root"
                       action = "patient_action"
                       sequence="11"/>


</odoo>